<div class="header1">
    <div class="container">   
        <div class="row">
            <div class="col-lg-12">   
                <div class="row">
                <div class="col-lg-5 col-lg-offset-2">
                    <h1 class="main-page"><span class="header-text">New Give me list</span></h1>
                </div>
                <div class="col-lg-5">
                    <div class="btn-real">
                        <%= link_to "/users/#{current_user.id}" do  %>
                            <%= fa_icon("home") %>
                        <% end %>
                    </div>
                    <div class="btn-real">
                        <%= link_to "/givemes" do  %>
                          <%= fa_icon("heart") %>
                        <% end %>
                    </div>
                </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <%= form_for(@giveme) do |f| %>
            <div class="col-lg-12">
                <%= f.label :'what can I do?', class: "sign-up-label"  %>
                <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="col-lg-12">
                <div class="btn-box">
                    <div class="button"><%= f.submit "CREATE GIVE ME LIST" %></div>
                </div>
            </div>
        <% end %>
    </div>
</div>